<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.bskok.checkers.controller.GameStartController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Board Size:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="boardSizeField" promptText="Enter size (N)" prefWidth="100"/>
            <Label text="x"/>
            <TextField fx:id="boardSizeField2" promptText="Enter size (N)" prefWidth="100"/>
        </HBox>

        <Label text="Player 1:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="player1NameField" promptText="Enter name"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <ColorPicker fx:id="player1ColorPicker"
                     GridPane.columnIndex="2" GridPane.rowIndex="1"/>

        <Label text="Player 2:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="player2NameField" promptText="Enter name"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <ColorPicker fx:id="player2ColorPicker"
                     GridPane.columnIndex="2" GridPane.rowIndex="2"/>

        <Button text="Start Game" onAction="#handleStartGame"
                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>
</VBox>
