<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="dev.bskok.checkers.controller.GameController">
    <center>
        <Pane fx:id="gameBoardContainer" prefWidth="640" prefHeight="640"/>
    </center>
    <right>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 15;">
            <Button text="New Game" onAction="#restartGame"/>
            <Button text="Exit" onAction="#handleExitButton"/>
        </VBox>
    </right>
</BorderPane>